# Telegram
TELEGRAM_BOT_TOKEN=
# Optional: Chat ID where admin commands are allowed (group or private chat id)
ADMIN_CHAT_ID=
# Recommended: immutable Telegram user IDs (comma-separated): 123,456
ADMIN_TELEGRAM_IDS=
# Fallback (less secure): Telegram usernames without @ (comma-separated): admin1,admin2
ADMIN_USERNAMES=

# Database
DATABASE_URL=sqlite:///./data/app.db

# RouterOS API
MIKROTIK_HOST=
MIKROTIK_PORT=8728
MIKROTIK_USE_SSL=false
MIKROTIK_USERNAME=
MIKROTIK_PASSWORD=

# VPN / 2FA behavior
POLL_INTERVAL_SECONDS=5
REQUIRE_CONFIRMATION=true
CONFIRMATION_TIMEOUT_SECONDS=300
CONFIRMATION_RESEND_SECONDS=60
CONFIRMATION_MAX_RESENDS=3
DISCONNECT_GRACE_SECONDS=30
SESSION_DURATION_HOURS=24

# Strictly detect connections via User Manager sessions (no PPP fallback)
SESSION_SOURCE=user_manager

# Optional: firewall rule selection by comment substring (per-user overrides can be added later)
FIREWALL_COMMENT_PREFIX=2FA

